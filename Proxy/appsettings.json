{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "PpyHostApi": {
        "ClusterId": "ApiCluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      "PpyClient": {
        "ClusterId": "FrontendCluster",
        "Match": {
          "Path": "/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "PpyHostApiCluster": {
        "Destinations": {
          "PpyHostApiDestination": {
            "Address": "https://api"
          }
        }
      },
      "PpyClientCluster": {
        "Destinations": {
          "PpyClientDestination": {
            "Address": "http://localhost:4200"
          }
        }
      }
    }
  }
}
